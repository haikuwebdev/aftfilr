<div class="<%%= category == @active_category ? 'active category' : 'category' %>">
  <div class="category_icon">
    <%%= link_to_remote image_tag('category_icon.png'), :url => <%= plural_name %>_url(:category => category), :method => :get %>
  </div>
  <div class="category_text">
    <%%= link_to_remote category.name, :url => <%= plural_name %>_url(:category => category), :method => :get %>
  </div>
</div>